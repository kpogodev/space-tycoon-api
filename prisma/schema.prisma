datasource db {
  provider          = "mysql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
  relationMode      = "prisma"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @id @default(autoincrement())
  nick      String   @unique
  email     String   @unique
  password  String
  agent     Agent[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Faction {
  COSMIC
  VOID
  GALACTIC
  QUANTUM
  DOMINION
  ASTRO
  CORSAIRS
  OBSIDIAN
  AEGIS
  UNITED
  SOLITARY
  COBALT
  OMEGA
  ECHO
  LORDS
  CULT
  ANCIENTS
  SHADOW
  ETHEREAL
}

model Agent {
  id        Int      @id @default(autoincrement())
  symbol    String   @unique
  faction   Faction
  token     String   @db.Text
  avatar    String?  @default("avatar_ship_1")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  userId    Int
  user      User     @relation(fields: [userId], references: [id])

  @@index([userId], name: "userId")
}
